{
  "name": "@org/frontend-app",
  "private": true,
  "version": "1.4.0",
  "description": "Frontend platform for customer-facing applications",
  "license": "UNLICENSED",
  "author": "Your Org <tech@org.com>",
  "homepage": "https://www.example.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/org/frontend-app"
  },
  "bugs": {
    "url": "https://github.com/org/frontend-app/issues"
  },
  "type": "module",
  "engines": {
    "node": ">=18",
    "npm": ">=9",
    "bun": ">=1.3u"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "lint": "eslint .",

    "start": "sh ./scripts/dev.sh",
    "predev": "sh ./scripts/dev.sh",
    "prebuild": "sh ./scripts/build.sh",
    "postbuild": "sh ./scripts/build.sh",
    "preview": "vite preview",
    "typecheck": "tsc -p tsconfig.app.json --noEmit",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "sh ./scripts/format.sh",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "md:lint": "markdownlint '**/*.md' -i node_modules",
    "test": "sh ./scripts/test.sh",
    "test:watch": "vitest",
    "test:ci": "sh ./scripts/test-ci.sh",
    "test:coverage": "vitest run --coverage",
    "validate": "npm run lint && npm run typecheck && npm run test:ci",
    "deps:outdated": "npm outdated || true",
    "deps:audit": "npm audit --audit-level=moderate || true",
    "deps:ncu": "npx npm-check-updates -u",
    "deps:upgrade": "npm run deps:ncu && npm install",
    "clean": "rimraf dist node_modules",
    "prepare": "husky install",
    "husky:install": "husky install && git add .husky",
    "commitlint": "commitlint --edit $1",
    "ci": "sh ./scripts/ci.sh",
    "e2e:open": "cypress open",
    "e2e:run": "cypress run --config baseUrl=http://localhost:5173",
    "lhci:autorun": "lhci autorun --upload.target=temporary-public-storage",
    "release": "changeset publish || echo 'No changeset configured'",
    "storybook": "echo 'storybook not configured'"
  },
  "dependencies": {
    "axios": "^1.6.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/vite": "^4.1.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-helmet-async": "^2.0.5",
    "react-router-dom": "^7.11.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@axe-core/react": "^4.4.2",
    "@lhci/cli": "^0.8.2",
    "cypress": "^12.10.0",
    "cypress-axe": "^1.0.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "npm-check-updates": "^16.0.0",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^15.0.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^5.1.1",
    "babel-plugin-react-compiler": "^1.0.0",
    "dotenv-safe": "^9.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^8.0.0",
    "jsdom": "^22.0.0",
    "lint-staged": "^14.0.0",
    "markdownlint-cli": "^0.33.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "npm:rolldown-vite@7.2.5",
    "vite-plugin-pwa": "^1.2.0",
    "vite-tsconfig-paths": "^4.0.0",
    "vitest": "^1.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss,html}": [
      "prettier --write"
    ],
    "*.md": [
      "markdownlint -c .markdownlint.json"
    ]
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  },
  "sideEffects": false,
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "eslintConfig": {
    "extends": [
      "@org/eslint-config"
    ]
  },
  "prettier": "@org/prettier-config"
}
